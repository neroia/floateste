{
  "name": "flow-whatsapp-builder",
  "private": true,
  "version": "1.0.0",
  "description": "Visual WhatsApp Automation Builder powered by Gemini",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build && electron-builder",
    "server": "node server/index.js"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.1",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.flow.whatsapp",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
